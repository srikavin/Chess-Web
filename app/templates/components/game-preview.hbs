<div class="card" style="width: 20rem;">
  <img class="card-img-top" width="100%" height="100%" src="{{data.preview}}" alt="Card image cap">
  <div class="card-block">
    <!--<h4 class="card-title">Card title</h4>-->
    <p>
    <div class="card-text row">
      <div class="col-5">
        {{#link-to "user" data.playerBlack.id}}{{data.playerBlack.username}}{{/link-to}}
      </div>
      <div class="col-2" style="text-align: center"><b>vs</b></div>
      <div class="col-5" style="text-align: right">
        {{#link-to "user" data.playerWhite.id}}{{data.playerWhite.username}}{{/link-to}}
      </div>
    </div>
    </p>
    {{#link-to 'games.game' data.id class="btn btn-primary"}}Spectate{{/link-to}}
  </div>
</div>